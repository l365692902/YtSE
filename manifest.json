{
    "manifest_version": 2,
    "name": "YtSE",
    "description": "YouTube subscribe extension, highlight interesting contents",
    "version": "2017Dec17.alpha001",
    "browser_action": {
        "browser_style": true,
        "default_icon": {
            "16": "icons/red_16.png",
            "32": "icons/red_32.png",
            "64": "icons/red_64.png"
        },
        "default_title": "left click to run, right click to configure"
    },
    "content_scripts": [
        {
            "run_at": "document_end",
            "matches": [
                "*://*.youtube.com/feed/subscription*"
            ],
            "js": [
                "lib/jquery-3.2.1.min.js",
                "lib/core.js",
                "content_scripts/content.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "lib/jquery-3.2.1.min.js",
            "lib/core.js",
            "background.js"
        ]
    },
    "icons": {
        "48": "icons/red_48.png",
        "96": "icons/red_96.png"
    },
    "options_ui": {
        "page": "settings/optionsV5.html",
        // "page": "lib/test.html",
        "open_in_tab": true
    },
    "permissions": [
        // "activeTab",
        "notifications",
        "*://*.youtube.com/*",
        "<all_urls>",
        "storage",
        "tabs",
        "webNavigation"
    ],
    // "content_security_policy": "script-src 'self' 'sha256-/nLaDjLjCQs9I0v3MGE2bIX/U6rHqCAVc4r/uI3I34o='; object-src 'self'",
    "author": "c4r"
}